    <table class="crud table table-striped table-bordered" data-crud-table="{{ crud.htmlid }}">
        <thead>
            <tr>
                <th class="select-checkbox">
                    <input type="checkbox" name="id-toggle" data-id="id-toggle">
                </th>
                <th>Id</th>
                <th>Title</th>
                <th>Reviews</th>
                <th>State</th>
            </tr>
        </thead>

        <tbody>
        {% for item in items.result %}
            <tr class="{# item.crudGetRowClass() #}">
                <td class="select-checkbox">
                    <input type="checkbox" name="id{{ item.id }}" data-id="{{ item.id }}">
                </td>
                <td>
                    â„– {{ item.id }}
                </td>
                <td>
                    <span>
                        <strong>{{ item.brand.title }}</strong> - 
                        {{ item.title }}
                    </span>

                    <div class="btn-group on-row-hover">
                        <a class="btn btn-mini" href="{{ ref(['_table/Bike/',item.id]|join) }}"><i class="icon-pencil icon-white"></i> edit</a>
                        <button class="btn btn-mini btn-danger"><i class="icon-trash icon-white"></i> delete</button>
                    </div>
                </td>
                <td>
                    {{ item.reviews|length }}

                    {% if item.reviews|length > 0 %}
                    <div class="btn-group on-row-hover">
                        <a class="btn btn-mini" href="{{ ref(['_table/Bike/',item.id,'/BikeReview']|join) }}"><i class="icon-comment icon-white"></i> reviews</a>
                    </div>
                    {% endif %}
                </td>
                <td>
                    <span>{{ item.DateModified|date('Y-m-d') }}</span>

                    {% if isPublished(item) %}
                        <div class="btn-group on-row-hover">
                            <button class="btn btn-mini btn-warning"><i class="icon-thumbs-down icon-white"></i> depublish</button>
                        </div>
                    {% else %}
                        <div class="btn-group on-row-hover">
                            <button class="btn btn-mini btn-success"><i class="icon-thumbs-up icon-white"></i> publish</button>
                        </div>
                    {% endif %}

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
