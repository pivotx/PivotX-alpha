<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- views -->
        <parameter key="ebikebundle.views.class">TwoKings\Bundle\EBikeBundle\Views\Service</parameter>

        <!-- formats -->
        <parameter key="ebikebundle.formats.class">TwoKings\Bundle\EBikeBundle\Formats\Service</parameter>
    </parameters>

    <services>
        <service id="ebikebundle.views" class="%ebikebundle.views.class%" public="true">
            <argument type="service" id="pivotx.views" />
            <argument type="service" id="doctrine" />
        </service>

        <service id="ebikebundle.formats" class="%ebikebundle.formats.class%" public="true">
            <argument type="service" id="pivotx.formats" />
        </service>
    </services>

</container>
